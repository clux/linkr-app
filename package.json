  "author": "Eirik Albrigtsen <analsandblaster@gmail.com>",
  "private": true,
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "clux/linkr-app"
  },
  "main": "server/index.js",
  "scripts": {
    "build-wc": "./build.sh",
    "build-db": "./init_db.js",
    "build": "npm run build-wc && npm run build-db",
