    "koa-static": "^1.4.9",
    "pg": "^4.4.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^3.2.0",
    "swig": "^1.4.2"
  },
  "devDependencies": {
    "co": "^4.5.4",
    "co-request": "^0.2.1",
    "coveralls": "^2.11.2",
    "istanbul-harmony": "^0.3.12",
    "jscoverage": "^0.5.9",
